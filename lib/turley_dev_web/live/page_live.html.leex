<section class="timeline">
  <div class="create-post">
    <form phx-submit="create_post">
      <input type="text" name="content" value="<%= @content %>" placeholder="Submit post..."/>
      <button type="submit" phx-disable-with="Submitting...">Submit</button>
    </form>
  </div>
  <div class="posts">
    <ul>
      <%= for post <- @posts do %>
        <li>
          <div class="post">
            <div class="header">
              <div class="creator"><%= "#{post.creator.first_name} #{post.creator.last_name}" %></div>
              <div class="creation-date"><%= post.inserted_at %></div>
            </div>
            <div class="content"><%= post.content %></div>
            <div class="comments">
              <ul>
                <%= for comment <- post.comments do %>
                  <li><%= comment.content %></li>
                <% end %>
              </ul>
              <form phx-submit="add_comment">
                <input type="text" name="content" placeholder="Add comment..."/>
                <input type="hidden" name="post_id" value="<%= post.id %>"/>
              </form>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</section>
