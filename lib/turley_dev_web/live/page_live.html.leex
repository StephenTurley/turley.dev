<section class="phx-hero">
  <div class="posts">
    <ul>
      <%= for post <- @posts do %>
        <li><%= post.content %></li>
      <% end %>
    </ul>
  </div>
  <form phx-submit="send_message">
    <input type="text" name="msg" value="<%= @msg %>" placeholder="Send message..." list="msgs" autocomplete="off"/>
    <button type="submit" phx-disable-with="Sending...">Submit</button>
  </form>
</section>
